<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container" id="restaurants-container">

  <h1>Search Results</h1>
<% if (restaurants.length > 0) { %> 
  <% for (let restaurant of restaurants){%>
    <div class="card mb-3">
      <div class="row">
          <div class="col-md-4">
              <%if(restaurant.images.length) {%>
              <img class="img-fluid h-100 w-100" alt="" src="<%=restaurant.images[0].url%>">
              <% }else {%>
              <img class="img-fluid" alt=""
                  src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
              <% } %>
          </div>
          <div class="col-md-8">
              <div class="card-body">
                  <h5 class="card-title"><%= restaurant.title %> </h5>
                  <p class="card-text"><%= restaurant.description.substring(0,95,) %>...</p>
                  <p class="card-text">
                      <small class="text-muted"><%= restaurant.location%></small>
                  </p>
                  <a class="btn btn-light" href="/restaurants/<%=restaurant._id%>">View <%=restaurant.title%></a>
              </div>
          </div>
      </div>
  </div>
  <% }%>
</div>
</div>
<% } else { %>
<div class="container">
  <h1>No Results</h1>
  <p>Sorry, no results were found for your search.</p>
</div>
<% } %>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const restaurants = { features: <%- JSON.stringify(restaurants) %>}
  </script>
  
<script src="/javascripts/clusterMap.js"></script>
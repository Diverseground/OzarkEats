<% layout('layouts/boilerplate')%>
<div class="container">
  <div
    class="
      container
      login-container
      d-flex
      justify-content-center
      align-items-center
      py-5
      card
    "
  >
    <div
      class="row mb-2 align-items-center align-self-center justify-content-end"
    >
      <div class="col-md-6 col-sm-12">
        <div class="">
          <div class="card-body">
            <h1 class="card-header dark text-white">Contact Us</h1>
            <form
              action="/contact"
              method="POST"
              class="validated-form"
              novalidate
            >
              <div class="form-group mb-3">
                <label for="name">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="form-group mb-3">
                <label for="email">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="form-group mb-3">
                <label for="submit">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  id="subject"
                  name="subject"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="form-group mb-3">
                <label for="message">Message</label>
                <textarea
                  class="form-control"
                  id="message"
                  name="message"
                  required
                ></textarea>
                <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="d-grid gap-2 text-center">
                <button class="btn btn-light btn-block btn-lg">
                  <i class="fas fa-envelope"></i> Send
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div
        class="
          col-xl-6
          px-5
          font-bold
          justify-content-center
          my-auto
          col-md-6
          d-none d-md-block d-lg-block
        "
      >
        <img
          src="/images/undraw_online_message_re_3m5v.svg"
          class="img-fluid"
          alt=""
        />
      </div>
    </div>
  </div>
</div>

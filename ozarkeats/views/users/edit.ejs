<% layout('layouts/boilerplate')%>

        <div class="card my-4 px-4 py-4">
      <form action="/users/<%=user._id%>?_method=PUT" method="POST" class="validated-form justify-content-center align-items-center" novalidate enctype="multipart/form-data">
        <h1 class="card-title text-center ">Editing <%= user.username %>!</h1>
        <div class="row align-items-center justify-content-evenly">
          
          <div class="col-md-6 ">
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="user[username]" autofocus required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-2">
              <label for="image">Profile Picture</label>
              <input type="file" name="image" class="form-control" id="image" multiple required>
            </div>
            <div class="mb-3">
                <div class="">Current Images</div>
                <% user.images.forEach(function(img, i) { %>
        
                <div>
                  <img src="<%=img.thumbnail %>" class="img-thumbnail w-25" alt="" />
                  <div class="form-check-inline">
                    <input
                      type="checkbox"
                      id="image-<%=i%>"
                      name="deleteImages[]"
                      value="<%=img.filename%>"
                      class="form-check-input"
                    />
                  </div>
                  <label class="form-check-label" for="image-<%=i%>">Delete?</label>
                </div>
                <% })%>
              </div>
          </div>
          <div class="col-md-6 mb-5 pb1">
              <div class="mb-2">
                <label class="form-label" for="firstName">First Name</label>
                <input class="form-control" type="text" id="title" name="user[firstName]" required />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="mb-2">
                <label class="form-label" for="lastName">Last Name</label>
                <input class="form-control" type="text" id="lastName" name="user[lastName]" required />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="mb-2">
                <label class="form-label" for="bio">Tell us a little about you</label>
                <textarea class="form-control" type="text" id="bio" name="user[bio]" required></textarea>
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>

            </div>
            <div class="text-center">
              <button class="btn btn-success btn-lg">Update</button>
            </div>
      </form>
    </div>
  </div>
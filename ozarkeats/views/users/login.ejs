<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/login.css" />

<div
  class="
    container
    login-container
    d-flex
    justify-content-center
    align-items-center
  "
>
  <div
    class="row mb-2 align-items-center align-self-center justify-content-end"
  >
    <div class="col-md-6 col-xl-4 offset-start-1">
      <div class="card border-dark shadow">
        <img
          src="https://images.unsplash.com/photo-1592345936479-8faba698aa01?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=870&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2 text-center">
              <button class="btn btn-light btn-block">Login</button>
              <p>not a member? <a href="/register">Sign up</a></p>
              <p>Forgot your password? <a href="/forgot">Reset</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div
      class="
        col-xl-6
        px-5
        font-bold
        justify-content-center
        my-auto
        col-md-6
        d-none d-md-block d-lg-block
      "
    >
      <h1 class="display-4 fw-bold">
        OzarkEats <span class="logo"><i class="fas fa-hamburger"></i></span>
      </h1>
      <p class="fs-3 fw-bold">
        Share about your experiences with posts and reviews.
      </p>
    </div>
  </div>
</div>
